{
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "vue-tsc --noEmit && vite build --emptyOutDir",
        "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs --fix --ignore-path .eslintignore",
        "test:unit": "vitest --run",
        "format": "prettier --write resources/js",
        "prepare": "husky install"
    },
    "lint-staged": {
        "**/*.php": [
            "./vendor/bin/pint --config ./pint.json"
        ],
        "**/*.php !**/database/migrations/*.php": [
            "./vendor/bin/phpstan analyse --configuration=./phpstan.neon"
        ],
        "*.{ts,js,jsx,cjs,mjs,vue}": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.{css,scss,less,styl,html,md,json}": [
            "prettier --write"
        ]
    },
    "devDependencies": {
        "@rushstack/eslint-patch": "^1.3.2",
        "@tailwindcss/forms": "^0.5.3",
        "@tsconfig/node18": "^18.2.0",
        "@types/alpinejs": "^3.7.2",
        "@types/jsdom": "^21.1.1",
        "@types/node": "^18.16.17",
        "@vitejs/plugin-vue": "^4.2.3",
        "@vue/eslint-config-prettier": "^7.1.0",
        "@vue/eslint-config-typescript": "^11.0.3",
        "@vue/test-utils": "^2.4.0",
        "@vue/tsconfig": "^0.4.0",
        "alpinejs": "^3.12.3",
        "autoprefixer": "^10.4.14",
        "axios": "^1.4.0",
        "eslint": "^8.44.0",
        "eslint-plugin-vue": "^9.15.1",
        "husky": "^8.0.3",
        "jsdom": "^22.1.0",
        "laravel-echo": "^1.15.1",
        "laravel-vite-plugin": "^0.7.8",
        "lint-staged": "^13.2.3",
        "postcss": "^8.4.25",
        "prettier": "^3.0.0",
        "pusher-js": "^8.2.0",
        "tailwindcss": "^3.3.2",
        "typescript": "^5.1.6",
        "vite": "^4.4.2",
        "vitest": "^0.33.0",
        "vue-tsc": "^1.8.4"
    },
    "dependencies": {
        "@iconify-prerendered/vue-clarity": "^0.22.1672651661",
        "@iconify-prerendered/vue-svg-spinners": "^0.22.1673787445",
        "@vueuse/core": "^10.2.1",
        "pinia": "^2.1.4",
        "vue": "^3.3.4",
        "vue-loader": "^17.2.2",
        "vue-router": "^4.2.4"
    }
}
